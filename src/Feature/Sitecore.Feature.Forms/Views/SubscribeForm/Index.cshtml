@using TAC.Utils.Helpers
@model Sitecore.Feature.Forms.Models.SubscribeModel

<!-- [Subscribe to mailing list] -->
<div class="side-widget">
    <h4 class="text-uppercase">@Model.ContentHeading</h4>
    <div class="sidebar">
        <div class="text">@Model.ContentIntro</div>
        @using (Html.BeginForm())
        {
            @Html.FormHandler()
            <div>
                <input class="form-control" type="email" placeholder="your@email.com" name="email">
            </div>
            <input class="btn btn-default" type="submit" value="Subscribe">
        }
    </div>
</div>
<!-- [/Subscribe to mailing list] -->
