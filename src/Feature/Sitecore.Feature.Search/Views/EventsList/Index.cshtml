@using Sitecore.Feature.Search.Models
@using TAC.Utils.Helpers

@model EventsList

<!-- [Event List] -->
<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var currentEvent in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@currentEvent.ItemUrl"> @currentEvent.Eventmage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@currentEvent.ItemUrl">@currentEvent.ContentHeading</a>
                    </h3>
                    <div class="description">
                        <p>@currentEvent.ContentIntro</p>
                    </div>
                </div>
                <div class="metadata well">@currentEvent.StartDate</div>
            </li>
        }
    </ol>
</div>
@Html.Pager(Model.PageSize, Model.TotalResultCount)
