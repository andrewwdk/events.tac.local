@using Sitecore.Mvc.Extensions
@model events.tac.local.Models.EventIntro

@functions
{
    string GetColor(int index)
    {
        if(index <= 2)
        {
            return "red";
        }

        if(index <= 5)
        {
            return "yellow";
        }

        return "green";
    }
}

